// Statistics Animation
function animateStatistics() {
    const statNumbers = document.querySelectorAll('.stat-number');
    console.log('üìä Starting statistics animation for', statNumbers.length, 'elements');

    statNumbers.forEach((stat, index) => {
        const target = parseInt(stat.getAttribute('data-target')) || 0;
        console.log(`Animating stat ${index + 1}: target = ${target}`);

        if (target > 0) {
            let current = 0;
            const increment = target / 50; // 50 steps for smooth animation
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    stat.textContent = target.toLocaleString('en-IN');
                    clearInterval(timer);
                    console.log(`‚úÖ Stat ${index + 1} completed: ${target}`);
                } else {
                    stat.textContent = Math.floor(current).toLocaleString('en-IN');
                }
            }, 40); // 40ms * 50 = 2 seconds total
        }
    });
}

